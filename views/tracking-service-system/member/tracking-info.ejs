    <script type="text/javascript">
      $(document).on("click", ".open-Dialog", function () {
        $("#modalBodyReceipt").empty();
        var myId = $(this).data("index");
        $("#Id")
          .empty()
          .append(`Receipt #${myId + 1}`);
        $("#companyNameModal")
          .empty()
          .append(recieptData[myId]?.company_details?.company_name);
        $("#dateModal").empty().append(dateModal);
        $("#companyAddressModal")
          .empty()
          .append(recieptData[myId]?.company_details?.company_address);
        $("#receiptNumberModal")
          .empty()
          .append(recieptData[myId]?.company_details?.reciept_number);
        $("#rebateNumberModal")
          .empty()
          .append(recieptData[myId]?.company_details?.rebate_number);

        recieptData[myId]?.description?.map((item, index) => {
          const tr = $(
            `<tr><td>${index + 1}</td><td class="description">${
              item?.name
            }</td><td>${item?.quantity}</td><td>$${(
              Math.round(item?.cost * 100) / 100
            ).toFixed(2)}</td></tr>`
          );
          $("#modalBodyReceipt").append(tr);
        });

        $("#subTotalModal")
          .empty()
          .append(
            `$${(Math.round(recieptData[myId]?.sub_total * 100) / 100).toFixed(
              2
            )}`
          );
        $("#stateTaxModal")
          .empty()
          .append(
            `$${(Math.round(recieptData[myId]?.tax * 100) / 100).toFixed(2)}`
          );
        $("#stateTaxPercentageModal")
          .empty()
          .append(
            `State of IL ${(
              Math.round(recieptData[myId]?.other_details?.state_tax * 100) /
              100
            ).toFixed(2)}% Tax</td>`
          );
        $("#discountModal")
          .empty()
          .append(
            `$${(
              Math.round(recieptData[myId]?.other_details?.discount * 100) / 100
            ).toFixed(2)}`
          );
        $("#totalModal")
          .empty()
          .append(
            `$${(Math.round(recieptData[myId]?.totalCost * 100) / 100).toFixed(
              2
            )}`
          );
        // As pointed out in comments,
        // it is unnecessary to have to manually call the modal.
        // $('#addBookDialog').modal('show');
      });

