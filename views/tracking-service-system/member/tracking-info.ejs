      // Code For Image Popup With Slider Starts
      $(document).ready(function () {
        for (var x = 0; x < activityTrackingLength; x++) {
          var lightcase = $(`.updatedGallery${x}`);
          if (lightcase.length) {
            $(`a[data-rel^=updatedGallery${x}]`).lightcase({
              transition: "fadeInline",
              video: {
                width: 800,
                height: "auto",
                poster: "",
                preload: "auto",
                controls: true,
                autobuffer: true,
                autoplay: false,
                loop: false,
              },
              showSequenceInfo: false,
              showTitle: false,
            });
          }
        }
      });
      // Code For Image Popup With Slider Starts

      $(".carousel").carousel({
        pause: true,
        interval: false,
      });

      $(".carousel")
        .carousel()
        .on("slide.bs.carousel", function () {
          $(".carousel-item")
            .find("video")
            .each(function () {
              this.pause();
            });

          $(".carousel-item active")
            .find("video")
            .each(function () {
              this.play();
            });
        });

      $(document).ready(function () {
        $(".progress_link").on("click", function () {
          $(".carousel-item")
            .find("video")
            .each(function () {
              this.pause();
            });
        });
      });

      (function ($) {
        for (var x = 0; x < activityTrackingLength; x++) {
          $(`.circle.progress_indicator${x}`)
            .circleProgress({
              value: trackingData[0]?.progress / 100,
              size: 100,
              fill: { color: "#14BBB6" },
            })
            .on("circle-animation-progress", function (event, progress) {
              $(this)
                .find("strong")
                .html(
                  Math.round(trackingData[0]?.progress * progress) + "<i>%</i>"
                );
            });
        }
      })(jQuery);

      $(document).on("click", ".currentProgress", function () {
        var trackingProgress = $(this).attr("data-index");
        (function ($) {
          for (var x = 0; x < activityTrackingLength; x++) {
            $(`.circle.progress_indicator${x}`)
              .circleProgress({
                value: trackingProgress / 100,
                size: 100,
                fill: { color: "#14BBB6" },
              })
              .on("circle-animation-progress", function (event, progress) {
                $(this)
                  .find("strong")
                  .html(Math.round(trackingProgress * progress) + "<i>%</i>");
              });
          }
        })(jQuery);
      });
